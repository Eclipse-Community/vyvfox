# Compiler, Linker, and Rust flags
#export CFLAGS="-Qunused-arguments -O3 /clang:-O3"
#export CPPFLAGS="-Qunused-arguments -O3 /clang:-O3"
#export CXXFLAGS="-Qunused-arguments -O3 /clang:-O3"
#export LDFLAGS="-Wl,-O3"
#export RUSTFLAGS="-C target-cpu=athlon64 -C target-feature=+sse2 -C codegen-units=1 -Z tune-cpu=athlon64"

# Enable for SSE3
# Compiler, Linker, and Rust flags
export CFLAGS="-Qunused-arguments -O3 -msse3 /clang:-O3"
export CPPFLAGS="-Qunused-arguments -O3 -msse3 /clang:-O3"
export CXXFLAGS="-Qunused-arguments -O3 -msse3 /clang:-O3"
export LDFLAGS="-Wl,-O3 -msse3"
export RUSTFLAGS="-C target-cpu=athlon64-sse3 -C target-feature=+sse3 -C codegen-units=1 -Z tune-cpu=athlon64-sse3"

